{
  "name": "@icedevml/react-native-host-card-emulation",
  "version": "0.2.2",
  "description": "Host Card Emulation (HCE) React Native Turbo Module for iOS and Android platforms.",
  "react-native": "js/index",
  "source": "js/index",
  "files": [
    "js",
    "android",
    "ios",
    "RTNHCEModuleIOS.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "keywords": [
    "react-native",
    "ios",
    "nfc",
    "hce"
  ],
  "repository": "https://github.com/icedevml/react-native-host-card-emulation",
  "author": "Michal Leszczynski ml@icedev.pl (https://github.com/icedevml)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/icedevml/react-native-host-card-emulation/issues"
  },
  "homepage": "https://github.com/icedevml/react-native-host-card-emulation#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "codegenConfig": {
    "name": "RTNHCEModuleSpec",
    "type": "modules",
    "jsSrcsDir": "js",
    "android": {
      "javaPackageName": "com.itsecrnd.rtnhceandroid"
    },
    "ios": {
      "modulesProvider": {
        "NativeHCEModule": "RTNHCEModuleIOS"
      }
    }
  }
}
